location /static/ {
    alias /code/static/;
    add_header Access-Control-Allow-Origin *;
}

location /media/ {
    alias /code/media/;
    add_header Access-Control-Allow-Origin *;
}

error_page 404 /404.html;
    location /404.html {
        alias /code/static/404.html;
}
error_page 500 502 503 504 /500.html;
    location /500.html {
        root /etc/nginx/html/custom_pages;
}